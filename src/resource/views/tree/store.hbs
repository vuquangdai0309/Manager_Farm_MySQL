{{> header}}
{{>navbar}}
<main id="main" class="main">

    <section class="section dashboard">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <!-- Reports -->
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body" style=" overflow-x: auto;">
                                <div class="row">
                                    <div class="pagetitle  col-6 mb-4">
                                        <h1>Quản lý giống cây </h1>
                                    </div><!-- End Page Title -->
                                    <div class="col-6">
                                        <button class="btn btn-primary" style="width: 200px;float:right"
                                            data-bs-toggle="modal" data-bs-target="#exampleModal"
                                            data-bs-whatever="@mdo">Thêm mới </button><br><br>
                                    </div>
                                </div>
                                <table class="table table-bordered" style="font-size: 12px;">
                                    <thead class="text-center">
                                        <tr>
                                            <th class="col-1">STT</th>
                                            <th class="col-4">Giống cây</th>
                                            <th class="col-1" colspan="2">Hành động</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each tree}}
                                        <tr class="center-button">
                                            <td>{{sum @index 1}}</td>
                                            <td>{{this.nameTree}}</td>
                                            <td> <i class="bi bi-pencil" style="color: rgb(7, 255, 56);"
                                                    data-bs-toggle="modal" data-bs-target="#editModal{{this._id}}"
                                                    data-bs-whatever="@mdo"></i>

                                            </td>
                                            <div class="modal fade" id="editModal{{this._id}}" tabindex="-1"
                                                aria-labelledby="editModalLabel{{this._id}}" aria-hidden="
                                                    true">
                                                <div class="modal-dialog modal-dialog-add ">
                                                    <div class="modal-content ">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="exampleModalLabel">Chỉnh sửa
                                                            </h5>
                                                        </div>
                                                        <div class="modal-body">
                                                            <form action="/tree/{{this._id}}/update?_method=PUT"
                                                                method="POST">
                                                                <div class="row">
                                                                    <div class="col-md-12">
                                                                        <div class="form-group">
                                                                            <label for="recipient-name"
                                                                                class="col-form-label">Giống
                                                                                cây:</label>
                                                                            <input type="text" class="form-control"
                                                                                id="" name="nameTree"
                                                                                value="{{this.nameTree}}" required>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="submit" class="btn btn-primary"
                                                                        style="float:right;;width:100px">Lưu lại
                                                                    </button>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </tr>
                                        {{else}}
                                        <tr>
                                            <td colspan="9" class="text-center">
                                                Không tìm thấy từ khóa nào !
                                            </td>
                                        </tr>
                                        {{/each }}
                                    </tbody>
                                </table>
                            </div>
                            <div class="col-lg-12 center">
                                <div class=" ">
                                    <nav aria-label="Page navigation">
                                        <ul class="pagination">
                                            {{#if pagination.prev}}
                                            <li class="page-item">
                                                <a class="page-link" href="/tree/store?page={{pagination.prev}}"
                                                    aria-label="Previous">
                                                    <span aria-hidden="true">&laquo;</span>
                                                </a>
                                            </li>
                                            {{/if}}

                                            {{#each pagination.pages}}
                                            <li class="page-item {{#if this.active}}active{{/if}}">
                                                <a class="page-link"
                                                    href="/tree/store?page={{this.number}}">{{this.number}}</a>
                                            </li>
                                            {{/each}}

                                            {{#if pagination.next}}
                                            <li class="page-item">
                                                <a class="page-link" href="/tree/store?page={{pagination.next}}"
                                                    aria-label="Next">
                                                    <span aria-hidden="true">&raquo;</span>
                                                </a>
                                            </li>
                                            {{/if}}
                                        </ul>
                                    </nav>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog modal-dialog-add ">
                        <div class="modal-content ">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Thêm Mới</h5>
                            </div>
                            <div class="modal-body">
                                <form action="/tree/creat" method="POST">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label for="recipient-name" class="col-form-label">Giống cây:</label>
                                                <input type="text" class="form-control" id="" name="nameTree" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-primary"
                                            style="float:right;;width:100px">Thêm
                                            mới</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
    </section>
</main>

{{> footer}}