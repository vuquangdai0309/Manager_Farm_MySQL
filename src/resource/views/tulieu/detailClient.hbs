{{> header}}
{{>navbar}}
<main id="main" class="main">
    <div class="pagetitle">
        <h1>Chi tiết bài viết: {{data.title}} </h1><br>
        <a href="/tulieu"> <i class="bi bi-arrow-left-circle-fill" style="font-size:24px"> </i></a>
    </div><!-- End Page Title -->
    <section class="section dashboard">
        <div class="row">
            <div class="col-lg-12">
                <!-- Card with an image on left -->
                <div class="row ">
                    <div class="card">
                        <div class="card-body">
                            <input type="hidden" id="content" value="{{data.content}}">
                            <div id="getcontent" style="width: 100%;"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
<script>
    const getcontent = document.getElementById('getcontent')
    const content = document.getElementById('content').value
    getcontent.innerHTML = content
</script>
