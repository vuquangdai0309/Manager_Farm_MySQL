<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Select2 CSS -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.1.0-beta.1/css/select2.min.css" rel="stylesheet">
{{> header}}
{{>navbar}}
<main id="main" class="main">
    <div class="card">
        <div class="card-body" style=" overflow-x: auto;">
            <div class="pagetitle">
                <div class="row">
                    <div class="col-6">
                        <h1>Nhật ký theo dõi nguyên liệu đầu vào</h1>
                    </div>
                    <div class="col-6"> <button class="btn btn-primary mb-3" data-bs-toggle="modal"
                            data-bs-target="#exampleModal" style="width: 200px; float:right">Thêm
                            Mới</button>
                    </div>
                </div>
            </div>
            <form id="searchForm" method="GET" action="/input-material-tracking-log">
                <div class="row justify-content-center mb-4">
                    <div class="col-md-2 ">
                        <div class="form-group">
                            <select class="form-select js-example-disabled-results" id="map_id" name="map"
                                aria-label="Default select example" show-value="{{map}}">
                                <option value="">Lô/thửa</option>
                                {{#each DataMap}}
                                <option value="{{this._id}}">{{this.namearea}} </option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2 ">
                        <div class="form-group">
                            <select class="form-select js-example-disabled-results" id="tree_id" name="tree"
                                aria-label="Default select example" show-value="{{tree}}">
                                <option value="">Chọn giống cây</option>
                                {{#each DataTree}}
                                <option value="{{this._id}}">{{this.nameTree}} </option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2 ">
                        <div class="form-group">
                            <select class="form-select js-example-disabled-results" id="season_id" name="season"
                                aria-label="Default select example" show-value="{{season}}">
                                <option value="">Chọn mùa</option>
                                {{#each DataSeason}}
                                <option value="{{this._id}}">{{this.nameSeason}} </option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2 ">
                        <div class="form-group">
                            <select class="form-select js-example-disabled-results" id="year_id" name="year"
                                aria-label="Default select example" show-value="{{year}}">
                                <option value="">Năm</option>
                                {{#each DataYear}}
                                <option value="{{this._id}}">{{this.year}} </option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="col-md-1  ">
                        <button type="submit" class="search"><i class="bi bi-search"></i></button>
                    </div>
                </div>
            </form>
            <section class="section dashboard">
                <form action="/input-material-tracking-log/handle-form-actions" method="POST">
                    <div class="row">
                        <div class="col-lg-6 mb-3">
                            <div class="row">
                                <div class="col-5">
                                    <select class="form-control" style="text-align: center;" name="action" required>
                                        <option value="">-----Hành động-----</option>
                                        <option value="delete">Xóa bản ghi</option>
                                    </select>
                                </div>
                                <div class="col-4">
                                    <button type="submit" class="btn btn-success mr-5 btn-check-all-submit "
                                        disabled>Thực
                                        hiện</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 mb-3">
                            <div class="row justify-content-end">
                                <div class="col-4">
                                    <button id="generatePdfButton" class="btn btn-success btn-check-all-submit "
                                        disabled>Xuất file PDF <i class="bi bi-box-arrow-in-down"></i></button>
                                </div>
                                <div class="col-1">
                                    <span><a href="/input-material-tracking-log/trash"
                                            style="color:red ;font-size:24px; ">
                                            <i class="bi bi-trash3"></i></a>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <table class="table table-bordered mt-3" style="font-size: 12px;">
                        <thead>
                            <tr>
                                <th rowspan="2"> <label><input type="checkbox" value="" id="checkbox-all">
                                    </label></th>
                                <th rowspan="2">Vùng trồng</th>
                                <th rowspan="2">Vụ mùa</th>
                                <th rowspan="2">Năm</th>
                                <th rowspan="2">Giống cây</th>
                                <th rowspan="2">Thời gian mua/ sản xuất</th>
                                <th rowspan="2">Tên nguyên vật liệu</th>
                                <th rowspan="2">Số lượng</th>
                                <th rowspan="2">Tên và địa chỉ mua vật tư</th>
                                <th rowspan="2">Hạn sử dụng</th>
                                <th colspan="4">Đối với vật tư tự sản xuất,ghi thêm thông tin sau</th>
                                <th rowspan="2">Chỉnh sửa</th>
                                <th rowspan="2">Xóa bỏ</th>
                            </tr>
                            <tr>
                                <th>Nguyên liệu sản xuất</th>
                                <th>Phương pháp xử lý</th>
                                <th>Hóa chất xử lý</th>
                                <th>Người xử lý</th>

                            </tr>
                        </thead>
                        {{#each nhatkydauvao}}
                        <tbody>
                            <tr>
                                <th>
                                    <div class="checkbox">
                                        <label><input type="checkbox" id="checkboxId" name="workIds"
                                                value="{{this.nhatkydauvao_id }}"></label>
                                    </div>
                                </th>
                                <td>{{this.mapname}}</td>
                                <td>{{this.nameSeason}}</td>
                                <td>{{this.year}}</td>
                                <td>{{this.nameTree}}</td>
                                <td>{{this.thoigian}} </td>
                                <td>{{this.name}}</td>
                                <td>{{this.soluong}}</td>
                                <td>{{this.tenvadiachi}}</td>
                                <td>{{this.hansudung}}</td>
                                <td>{{this.nguyenlieusanxuat}}</td>
                                <td>{{this.phuongphapxuly}}</td>
                                <td>{{this.hoachatxuly}}</td>
                                <td>{{this.nguoixuly}}</td>

                                <td> <a href="/input-material-tracking-log/{{this.nhatkydauvao_id }}/edit"><i
                                            class="bi bi-pencil" style="color: rgb(7, 255, 56);"></i></a></td>
                                <td><a> <i class="bi bi-trash3" data-bs-toggle="modal"
                                            data-bs-target="#delete-work-modal" data-id="{{this.nhatkydauvao_id }}"
                                            style="color: red;"></i></a>
                                </td>
                            </tr>
                            {{else}}
                            <tr>
                                <td colspan="15" class="text-center">
                                    Không có bản ghi nào !
                                </td>
                            </tr>
                        </tbody>
                        {{/each}}
                    </table>

                    <div class="col-md-12 center">
                        <div class="">
                            <nav aria-label="Page navigation">
                                <ul class="pagination">
                                    {{#if pagination.prev}}
                                    <li class="page-item">
                                        <a class="page-link" onclick="changePage({{pagination.prev}})"
                                            aria-label="Previous">
                                            <span aria-hidden="true">&laquo;</span>
                                        </a>
                                    </li>
                                    {{/if}}
                                    {{#each pagination.pages as |page|}}
                                    {{#if page.active}}
                                    <li class="page-item active">
                                        <a class="page-link" onclick="changePage({{this.number}})">{{this.number}}</a>
                                    </li>
                                    {{else if page.isDots }}

                                    {{else}}
                                    <li class="page-item ">
                                        <a class="page-link" onclick="changePage({{this.number}})">{{this.number}}</a>
                                    </li>
                                    {{/if}}
                                    {{/each}}

                                    {{#if pagination.next}}
                                    <li class="page-item">
                                        <a class="page-link" onclick="changePage({{pagination.next}})"
                                            aria-label="Next">
                                            <span aria-hidden="true">&raquo;</span>
                                        </a>
                                    </li>
                                    {{/if}}
                                </ul>
                            </nav>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
    {{!-- form thêm --}}
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog  modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Thêm nhật ký theo dõi nguyên liệu đầu
                        vào </h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="add-event-form">
                        <form id="event-form" method="POST" action="/input-material-tracking-log/creat">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row mb-4">
                                        <div class="col-md-6">
                                            <label class="event-title">Giống cây</label>
                                            <select id="selectedTree" class="js-example-disabled-results form-select"
                                                aria-label="Default select example" name="tree_id" required>
                                                <option value="">Chọn giống cây</option>
                                                {{#each DataTree}}
                                                <option value="{{this._id}}">{{this.nameTree}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="event-title">Vụ Mùa</label>
                                            <select id="selectedSeason" class="js-example-disabled-results form-select"
                                                aria-label="Default select example" name="season_id" required>
                                                {{!-- {{#each DataSeason}}
                                                <option value="{{this._id}}">{{this.nameSeason}}</option>
                                                {{/each}} --}}
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row mb-4">
                                        <div class="col-md-6">
                                            <label class="event-title">Năm</label>
                                            <select id="selectedYear" class="js-example-disabled-results form-select"
                                                aria-label="Default select example" name="year_id" required>
                                                {{#each DataYear}}
                                                <option value="{{this._id}}">{{this.year}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="event-title">Tên nguyên vật liệu</label>
                                            <select id="selectedNguyenLieu"
                                                class="js-example-disabled-results form-select"
                                                aria-label="Default select example" name="nguyenvatlieu_id" required>
                                                {{!-- {{#each DataNguyenVatLieu}}
                                                <option value="{{this._id}}">{{this.name}}</option>
                                                {{/each}} --}}
                                            </select>
                                        </div>

                                    </div>
                                    <div class="form-group mb-4">
                                        <label class="event-title">Vùng trồng</label>
                                        <select class="js-example-disabled-results form-select"
                                            aria-label="Default select example" name="vungtrong_id" required>
                                            {{#each DataMap}}
                                            <option value="{{this._id}}">{{this.namearea}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                    <div class="form-group  mb-4">
                                        <label class="event-title" style="color: red;">* Điền nguyên vật liệu nếu không
                                            có trong danh sách *</label>
                                        <input type="text" class="form-control" id="event-start" name="newNguyenLieu">
                                    </div>
                                    <div class="row  mb-4">
                                        <div class="col-md-6">
                                            <label class="event-title">Thời gian mua/ sản xuất </label>
                                            <input type="date" class="form-control" id="event-start" name="thoigian"
                                                required>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label class="event-title">Số lượng </label>
                                            <input type="text" class="form-control" id="event-start" name="soluong"
                                                required>
                                        </div>
                                    </div>

                                    <div class="form-group  mb-4">
                                        <label class="event-title">Tên và địa chỉ mua vật tư </label>
                                        <input type="text" class="form-control" id="event-start" name="tenvadiachi"
                                            required>
                                    </div>
                                    <div class="form-group mb-4">
                                        <label class="event-title">Hạn sử dụng </label>
                                        <input type="date" class="form-control" id="event-start" name="hansudung"
                                            required>
                                    </div>

                                </div>
                                <div class="col-md-6 ">
                                    <h1 class="modal-title fs-5 mb-4" id="exampleModalLabel" style="color: red;">Đối
                                        với vật
                                        tư tự sản xuất, ghi
                                        thêm thông tin sau
                                    </h1>

                                    <div class="form-group mb-4">
                                        <label class="event-title">Nguyên liệu sản xuất</label>
                                        <input type="text" class="form-control" id="nguyenlieusanxuat"
                                            name="nguyenlieusanxuat">
                                    </div>

                                    <div class="form-group mb-4">
                                        <label for="exampleFormControlTextarea1">Phương pháp xử lý</label>
                                        <input type="text" class="form-control" id="phuongphapxuly"
                                            name="phuongphapxuly">
                                    </div>

                                    <div class="form-group mb-4">
                                        <label class="event-title">Hóa chất xử lý</label>
                                        <input type="text" class="form-control" id="hoachatxuly" name="hoachatxuly">
                                    </div>
                                     <div class="form-group mb-4">
                                        <label class="event-title">Người xử lý</label>
                                        <input type="text" class="form-control" id="nguoixuly" name="nguoixuly">
                                    </div>

                                </div>
                            </div>

                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary"
                                    style="width:250px;float:right;margin-left:20px">Thêm Mới
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>

    {{!-- delete form --}}
    {{!-- Confirm Delete nhatkysanxuat --}}
    <div id="delete-work-modal" class="modal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Xóa nhật ký</h5>
                    {{!-- <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    --}}
                </div>
                <div class="modal-body">
                    <p>Bạn có chắc chắn muốn xóa nhật ký này không ?</p>
                </div>
                <div class="modal-footer ">
                    <button id="btn-delete-item" type="button" class="btn btn-danger"
                        style="float: right; width:100px">Đồng ý
                    </button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"
                        style="float: right; width:100px">Thoát</button>
                </div>
            </div>
        </div>
    </div>
    {{!-- Confirm edit nhatkysanxuat --}}
</main>
