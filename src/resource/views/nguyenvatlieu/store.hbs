{{> header}}
{{>navbar}}
<main id="main" class="main">
    <section class="section dashboard">

        <div class="card">
            <div class="card-body" style=" overflow-x: auto;">
                <div class="row">
                    <div class="col-6 pagetitle">
                        <h1>Quản lý nguyên vật liệu</h1>
                    </div>
                    <div class="col-6">
                        <button class="btn btn-primary" style="width: 200px;float:right" data-bs-toggle="modal"
                            data-bs-target="#exampleModal" data-bs-whatever="@mdo">Thêm mới </button><br><br>
                    </div>
                </div>
                <div class="row header d-flex align-items-center justify-content-center mb-3"
                    style="box-shadow:none !important">
                    <div class="col-6">
                        <div class="search-bar">
                            <form class="search-form d-flex align-items-center" method="GET" action="/materials/store">
                                <input type="text" id="inputSearch" name="name" placeholder="Nguyên vật liệu..."
                                    title="Enter search keyword" value="{{search}}">
                                <button type="submit" title="Search"><i class="bi bi-search"></i></button>
                            </form>
                        </div><!-- End Search Bar -->
                    </div>
                </div>

                <table class="table table-bordered" style="font-size: 12px;">
                    <thead class="text-center">
                        <tr>
                            <th>STT</th>
                            <th>Tên nguyên vật liệu</th>
                            <th>Liều lượng</th>

                            <th>Nồng độ</th>
                            <th>Thời gian cách ly thuốc</th>
                            <th>Mục đích</th>
                            <th>Thiết bị</th>
                            <th colspan="2">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each results}}
                        <tr class="center-button">
                            <td>{{sum @index 1}}</td>
                            <td>{{this.name}}</td>
                            <td>{{this.lieuluong}}</td>
                            <td>{{this.nongdo}}</td>
                            <td>{{this.thoigiancachlythuoc}}</td>
                            <td>{{this.mucdich}}</td>
                            <td>{{this.thietbi}}</td>
                            <td> <i class="bi bi-pencil" style="color: rgb(7, 255, 56);" data-bs-toggle="modal"
                                    data-bs-target="#editModal{{this._id}}" data-bs-whatever="@mdo"></i>

                            </td>
                            <div class="modal fade" id="editModal{{this._id}}" tabindex="-1"
                                aria-labelledby="editModalLabel{{this._id}}" aria-hidden="
                                                    true">
                                <div class="modal-dialog modal-dialog-add modal-lg">
                                    <div class="modal-content ">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Chỉnh sửa
                                            </h5>
                                        </div>
                                        <div class="modal-body">
                                            <form action="/materials/{{this._id}}/update?_method=PUT" method="POST">
                                                <div class="row mb-3">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label for="recipient-name" class="col-form-label">Tên
                                                                nguyên liệu:</label>
                                                            <input type="text" class="form-control" id="" name="name"
                                                                value="{{this.name}}" required>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label for="recipient-name" class="col-form-label">Liều
                                                                lượng:</label>
                                                            <input type="text" class="form-control" id=""
                                                                name="lieuluong" placeholder="VD: 0,35 kg"
                                                                value="{{this.lieuluong}}" required>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row mb-3">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label for="recipient-name" class="col-form-label">Nồng
                                                                độ:</label>
                                                            <input type="text" class="form-control" id="" name="nongdo"
                                                                value="{{this.nongdo}}" required>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label for="recipient-name" class="col-form-label">Thời gian
                                                                cách ly:</label>
                                                            <input type="text" class="form-control" id=""
                                                                name="thoigiancachlythuoc" placeholder="VD: 21 ngày"
                                                                value="{{this.thoigiancachlythuoc}}" required>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row mb-3">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label for="recipient-name" class="col-form-label">Mục
                                                                đích:</label>
                                                            <input type="text" class="form-control" id="" name="mucdich"
                                                                value="{{this.mucdich}}" required>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label for="recipient-name" class="col-form-label">Thiết
                                                                bị:</label>
                                                            <input type="text" class="form-control" id="" name="thietbi"
                                                                value="{{this.thietbi}}" required>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="submit" class="btn btn-primary"
                                                        style="float:right;;width:100px">Lưu lại
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </tr>
                        {{else}}
                        <tr>
                            <td colspan="9" class="text-center">
                                Không tìm thấy từ khóa nào !
                            </td>
                        </tr>
                        {{/each }}
                    </tbody>
                </table>

                <div class="col-lg-12 center">
                    <nav aria-label="Page navigation">
                        <ul class="pagination">

                            {{#if pagination.prev}}
                            <li class="page-item">
                                <a class="page-link" onclick="changePage({{pagination.prev}})" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            {{/if}}
                            {{#each pagination.pages as |page|}}
                            {{#if page.active}}
                            <li class="page-item active">
                                <a class="page-link" onclick="changePage({{this.number}})">{{this.number}}</a>
                            </li>
                            {{else if page.isDots }}

                            {{else}}
                            <li class="page-item ">
                                <a class="page-link" onclick="changePage({{this.number}})">{{this.number}}</a>
                            </li>
                            {{/if}}
                            {{/each}}

                            {{#if pagination.next}}
                            <li class="page-item">
                                <a class="page-link" onclick="changePage({{pagination.next}})" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                            {{/if}}
                        </ul>
                    </nav>
                </div>
            </div>
        </div>

    </section>
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-add modal-lg">
            <div class="modal-content ">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Thêm Mới</h5>
                </div>
                <div class="modal-body">
                    <form action="/materials/creat" method="POST">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="recipient-name" class="col-form-label">Tên nguyên liệu:</label>
                                    <input type="text" class="form-control" id="" name="name" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="recipient-name" class="col-form-label">Liều lượng:</label>
                                    <input type="text" class="form-control" id="" name="lieuluong"
                                        placeholder="VD: 0,35 kg" required>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="recipient-name" class="col-form-label">Nồng độ:</label>
                                    <input type="text" class="form-control" id="" name="nongdo" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="recipient-name" class="col-form-label">Thời gian cách ly:</label>
                                    <input type="text" class="form-control" id="" name="thoigiancachlythuoc"
                                        placeholder="VD: 21 ngày" required>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="recipient-name" class="col-form-label">Mục đích:</label>
                                    <input type="text" class="form-control" id="" name="mucdich" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="recipient-name" class="col-form-label">Thiết bị:</label>
                                    <input type="text" class="form-control" id="" name="thietbi" required>
                                </div>
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary" style="float:right;;width:100px">Thêm
                                mới</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

{{> footer}}
<script>
    const inputSearch = document.getElementById('inputSearch').value
    function changePage(page) {
        window.location.href = `/materials/store/?page=${page}&name=${inputSearch}`;
    }
</script>