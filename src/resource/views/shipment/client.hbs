<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description"
        content="Responsive Bootstrap4 Shop Template, Created by Imran Hossain from https://imransdesign.com/">

    <!-- title -->


    <!-- favicon -->
    <link rel="shortcut icon" type="image/png" href="/assets/img/favicon.png">
    <!-- google font -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,700&display=swap" rel="stylesheet">
    <!-- fontawesome -->
    <link rel="stylesheet" href="/assets/css/all.min.css">
    <!-- bootstrap -->
    <link rel="stylesheet" href="/assets/bootstrap/css/bootstrap.min.css">
    <!-- owl carousel -->
    <link rel="stylesheet" href="/assets/css/owl.carousel.css">
    <!-- magnific popup -->
    <link rel="stylesheet" href="/assets/css/magnific-popup.css">
    <!-- animate css -->
    <link rel="stylesheet" href="/assets/css/animate.css">
    <!-- mean menu css -->
    <link rel="stylesheet" href="/assets/css/meanmenu.min.css">
    <!-- main style -->
    <link rel="stylesheet" href="/assets/css/main.css">
    <!-- responsive -->
    <link rel="stylesheet" href="/assets/css/responsive.css">

</head>

<body>

    {{> headerTruyxuat}}
    <!-- end search arewa -->

    <!-- breadcrumb-section -->
    <div class="breadcrumb-section breadcrumb-bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2 text-center">
                    <div class="breadcrumb-text">
                        <p>Truy xuất nguồn gốc</p>
                        <h1>Thông Tin</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end breadcrumb section -->
    {{#if done}}
    <!-- featured section -->
    <div class="feature-bg mb-5 mt-80 ">
        <div class="container">
            <div class="row">
                <div class="col-lg-5 ">
                    <img src="/{{data.image}}" style="width:100%;height:100%;object-fit:cover">
                </div>
                <div class="col-lg-7 mt-3">
                    <div class="featured-text">
                        <h2 class="pb-3"> <span class="orange-text">{{data.title}}</span></h2>
                        <div class="row">
                            <div class="col-lg-6 col-md-6 mb-4 mb-md-5">
                                <div class="list-box d-flex">
                                    <div class="list-icon">
                                        <i class="bi bi-house-door-fill"></i>
                                    </div>
                                    <div class="content">
                                        <h3>Đơn vị sản xuất</h3>
                                        <p>{{data.productionUnit}}</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 mb-4 mb-md-5">
                                <div class="list-box d-flex">
                                    <div class="list-icon">
                                        <i class="bi bi-telephone-fill"></i>
                                    </div>
                                    <div class="content">
                                        <h3>Số điện thoại</h3>
                                        <p>{{data.phone}}</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 mb-4 mb-md-5">
                                <div class="list-box d-flex">
                                    <div class="list-icon">
                                        <i class="bi bi-envelope-fill"></i>
                                    </div>
                                    <div class="content">
                                        <h3>Email</h3>
                                        <p>{{data.email}}
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <div class="list-box d-flex">
                                    <div class="list-icon">
                                        <i class="bi bi-signpost-2-fill"></i>
                                    </div>
                                    <div class="content">
                                        <h3>Địa chỉ</h3>
                                        <p>{{data.address}}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end featured section -->
    <!-- testimonail-section -->
    <div class="testimonail-section mt-80 mb-50">
        <div class="container">
            <div class="breadcrumb-text">
                <p style="font-size: 20px;">GIỚI THIỆU</p>
            </div>

            <p class="testimonial-body">
                {{{data.content}}}
            </p>
        </div>
    </div>

    <div class="testimonail-section mt-80 mb-50">
        <div class="container">
            <div class="card">
                <div class="card-body" style=" overflow-x: auto;">
                    <div class="breadcrumb-text">
                        <p style="font-size: 20px;">
                            NHẬT KÝ NGUYÊN LIỆU ĐẦU VÀO
                        </p>
                    </div>

                    <p class="testimonial-body">

                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th rowspan="2">STT</th>
                                <th rowspan="2">Thời gian mua/ sản xuất</th>
                                <th rowspan="2">Tên nguyên vật liệu</th>
                                <th rowspan="2">Số lượng</th>
                                <th rowspan="2">Tên và địa chỉ mua vật tư</th>
                                <th rowspan="2">Hạn sử dụng</th>
                                <th colspan="4" style="color: red;">Đối với vật tư tự sản xuất,ghi thêm thông tin sau
                                </th>
                            </tr>
                            <tr>
                                <th>Nguyên liệu sản xuất</th>
                                <th>Phương pháp xử lý</th>
                                <th>Hóa chất xử lý</th>
                                <th>Người xử lý</th>

                            </tr>
                        </thead>
                        {{#each nhatkydauvao}}
                        <tbody>
                            <tr>
                                <td>{{sum @index 1}}</td>
                                <td>{{this.thoigian}} </td>
                                <td>{{this.name}}</td>
                                <td>{{this.soluong}}</td>
                                <td>{{this.tenvadiachi}}</td>
                                <td>{{this.hansudung}}</td>
                                <td>{{this.nguyenlieusanxuat}}</td>
                                <td>{{this.phuongphapxuly}}</td>
                                <td>{{this.hoachatxuly}}</td>
                                <td>{{this.nguoixuly}}</td>
                            </tr>
                            {{else}}
                            <tr>
                                <td colspan="15" class="text-center">
                                    Không có bản ghi nào !
                                </td>
                            </tr>
                        </tbody>
                        {{/each}}
                    </table>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="testimonail-section mt-80 mb-50">
        <div class="container">
            <div class="card">
                <div class="card-body" style=" overflow-x: auto;">
                    <div class="breadcrumb-text">
                        <p style="font-size: 20px;">
                            NHẬT KÝ QUÁ TRÌNH SẢN XUẤT
                        </p>
                    </div>

                    <p class="testimonial-body">

                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Thời gian thực hiện</th>
                                <th>Tên nguyên vật liệu</th>
                                <th>Nồng độ pha/bón</th>
                                <th>Tổng lượng sử dụng</th>
                                <th>Thời gian cách ly</th>
                                <th>Mục đích sử dụng</th>
                                <th>Lô/Thửa</th>
                                <th>Thiết bị sử dụng</th>
                                <th>VS dụng cụ (Đ/K)</th>
                            </tr>
                        </thead>
                        {{#each nhatkysanxuat}}
                        <tbody>
                            <tr>
                                <td>{{sum @index 1}}</td>
                                <td>{{this.start}} đến {{this.end}}</td>
                                <td>{{this.name}}</td>
                                <td>{{this.nongdo}}</td>
                                <td>{{this.luongsudung}}</td>
                                <td>{{this.thoigiancachly}}</td>
                                <td>{{this.mucdich}}</td>
                                <td>{{this.namearea}}</td>
                                <td>{{this.thietbi}}</td>
                                <td>{{this.vesinhdungcu}}</td>

                            </tr>
                            {{else}}
                            <tr>
                                <td colspan="16" class="text-center">
                                    Không có bản ghi nào !
                                </td>
                            </tr>
                        </tbody>
                        {{/each}}
                    </table>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="testimonail-section mt-80 mb-150">
        <div class="container">
            <div class="breadcrumb-text">
                <p style="font-size: 20px;">
                    Bản đồ thể hiện vùng trồng
                </p>
            </div>

            <p class="testimonial-body">
            <div class="card">
                <div class="card-body" style=" overflow-x: auto;">
                    <div id="map" style="width: 100%; height: 70vh;"></div>
                </div>
            </div>
            <div id="setview" data-lat="{{centermap.lat}}" data-lng="{{centermap.lng}}"
                data-zoomLevel="{{centermap.zoomLevel}}"></div>
            <div class="" id="getmap" namearea="{{map.namearea}}" type="{{map.type}}" areaShow="{{map.areaMeter}}"
                coordinates="{{map.coordinates}}">
            </div>

            </p>
        </div>
    </div>

    {{else}}
    <div class=" d-flex justify-content-center align-items-center" style="height: 200px;">
        <span>Không tìm thấy thông tin về sản phẩm!</span>
    </div>

    {{/if}}
    <!-- footer -->
    {{> footerTruyxuat}}
    <!-- end copyright -->

    <!-- jquery -->
    <script src="/assets/js/jquery-1.11.3.min.js"></script>
    <!-- bootstrap -->
    <script src="/assets/bootstrap/js/bootstrap.min.js"></script>
    <!-- count down -->
    <script src="/assets/js/jquery.countdown.js"></script>
    <!-- isotope -->
    <script src="/assets/js/jquery.isotope-3.0.6.min.js"></script>
    <!-- waypoints -->
    <script src="/assets/js/waypoints.js"></script>
    <!-- owl carousel -->
    <script src="/assets/js/owl.carousel.min.js"></script>
    <!-- magnific popup -->
    <script src="/assets/js/jquery.magnific-popup.min.js"></script>
    <!-- mean menu -->
    <script src="/assets/js/jquery.meanmenu.min.js"></script>
    <!-- sticker js -->
    <script src="/assets/js/sticker.js"></script>
    <!-- main js -->
    <script src="/assets/js/main.js"></script>
    <script src="/js/mapshipment.js"></script>

</body>

</html>