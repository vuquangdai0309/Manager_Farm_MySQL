{{> header}}
{{>navbar}}
<main id="main" class="main">
    <section class="section dashboard">

        <div class="card">
            <div class="card-body" style=" overflow-x: auto;">
                <div class="row">
                    <div class="col-6 pagetitle">
                        <h1>Quản lý các vụ mùa</h1>
                    </div>
                    <div class="col-6">
                        <button class="btn btn-primary" style="width: 200px;float:right" data-bs-toggle="modal"
                            data-bs-target="#exampleModal" data-bs-whatever="@mdo">Thêm mới </button><br><br>
                    </div>
                </div>
                <div class="row header d-flex align-items-center justify-content-center mb-3"
                    style="box-shadow:none !important">
                    <div class="col-6">
                        <div class="search-bar">
                            <form class="search-form d-flex align-items-center" method="GET" action="/season/store">
                                <input type="text" id="inputSearch" name="tree" placeholder="Giống cây  ..."
                                    title="Enter search keyword" value="{{search}}">
                                <button type="submit" title="Search"><i class="bi bi-search"></i></button>
                            </form>
                        </div><!-- End Search Bar -->
                    </div>
                </div>

                <table class="table table-bordered" style="font-size: 12px;">
                    <thead class="text-center">
                        <tr>
                            <th class="col-1">STT</th>
                            <th class="col-5">Giống cây</th>
                            <th class="col-5">Vụ mùa</th>
                            <th class="col-1" colspan="2">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each season}}
                        <tr class="center-button">
                            <td>{{sum @index 1}}</td>
                            <td>{{this.nameTree}}</td>
                            <td>{{this.nameSeason}}</td>
                            <td> <i class="bi bi-pencil" style="color: rgb(7, 255, 56);" data-bs-toggle="modal"
                                    data-bs-target="#editModal{{this._id}}" data-bs-whatever="@mdo"></i>

                            </td>
                            <div class="modal fade" id="editModal{{this._id}}" tabindex="-1"
                                aria-labelledby="editModalLabel{{this._id}}" aria-hidden="
                                                    true">
                                <div class="modal-dialog modal-dialog-add ">
                                    <div class="modal-content ">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Chỉnh sửa
                                            </h5>
                                        </div>
                                        <div class="modal-body">
                                            <form action="/season/{{this._id}}/update?_method=PUT" method="POST">
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            <label for="recipient-name" class="col-form-label">Vụ mùa:
                                                            </label>
                                                            <input type="text" class="form-control" id=""
                                                                name="nameSeason" value="{{this.nameSeason}}" required>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="submit" class="btn btn-primary"
                                                        style="float:right;;width:100px">Lưu lại
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </tr>
                        {{else}}
                        <tr>
                            <td colspan="9" class="text-center">
                                Không tìm thấy từ khóa nào !
                            </td>
                        </tr>
                        {{/each }}
                    </tbody>
                </table>

                <div class="col-lg-12 center">
                    <nav aria-label="Page navigation">
                        <ul class="pagination">

                            {{#if pagination.prev}}
                            <li class="page-item">
                                <a class="page-link" onclick="changePage({{pagination.prev}})" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            {{/if}}
                            {{#each pagination.pages as |page|}}
                            {{#if page.active}}
                            <li class="page-item active">
                                <a class="page-link" onclick="changePage({{this.number}})">{{this.number}}</a>
                            </li>
                            {{else if page.isDots }}

                            {{else}}
                            <li class="page-item ">
                                <a class="page-link" onclick="changePage({{this.number}})">{{this.number}}</a>
                            </li>
                            {{/if}}
                            {{/each}}

                            {{#if pagination.next}}
                            <li class="page-item">
                                <a class="page-link" onclick="changePage({{pagination.next}})" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                            {{/if}}
                        </ul>
                    </nav>
                </div>
            </div>
        </div>

    </section>
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-add ">
            <div class="modal-content ">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Thêm Mới</h5>
                </div>
                <div class="modal-body">
                    <form action="/season/creat" method="POST">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="recipient-name" class="col-form-label">Giống cây:</label>
                                    <select class="form-select" name="tree_id">
                                        {{#each tree}}
                                        <option value="{{this._id}}">{{this.nameTree}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="recipient-name" class="col-form-label">Vụ mùa:</label>
                                    <input type="text" class="form-control" id="" name="nameSeason" required>
                                </div>
                            </div>
                        </div>
                        <br>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary" style="float:right;;width:100px">Thêm
                                mới</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

{{> footer}}
<script>
    const inputSearch = document.getElementById('inputSearch').value
    function changePage(page) {
        window.location.href = `/season/store/?page=${page}&tree=${inputSearch}`;
    }
</script>