{{> header}}
{{>navbar}}
<main id="main" class="main">
    <div class="pagetitle">
        <div class="row ">
            <div class="col-md-5 mt-3">
                <h1>Nhật ký quá trình sản xuất</h1>
                <a href="/nhatkysanxuat"> <i class="bi bi-arrow-left-circle-fill" style="font-size:24px"> </i></a>
            </div>
            <div class="col-md-1 mt-3"></div>
            <div class="col-md-2 mt-3">
                <form id="searchForm" method="GET" action="/nhatkysanxuat/storeList">
                    <div class="form-group">
                        <select class="form-select " id="giongcay" name="giongcay" aria-label="Default select example"
                            show-value="{{giongcay}}">
                            <option value="">Chọn giống cây</option>
                            {{#each Datagiongcay}}
                            <option value="{{this._id}}">{{this.giongcay}} </option>
                            {{/each}}
                        </select>
                    </div>
            </div>
            <div class="col-md-4 mt-3">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <select class="form-select " id="vumua" name="vumua" aria-label="Default select example"
                                show-value="{{vumua}}">
                                <option value="">Vụ mùa</option>
                                {{#each Datavumua}}
                                <option value="{{this._id}}">{{this.vumua}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3 ">
                        <button type="submit" id="btn" class="btn btn-primary">Tìm kiếm</button>
                    </div>
                </div>
            </div>
            </form>
        </div>
    </div><!-- End Page Title -->

    <section class="section dashboard">
        <div class="card-body ">
            <h5>Danh sách</h5>
            <form action="/nhatkysanxuat/handle-form-actions" method="POST">
                <div class="row">

                    <div class="col-md-6 mb-3">
                        <div class="row">
                            <div class="col-6">
                                <select class="form-control" style="text-align: center;" name="action" required>
                                    <option value="">-----Hành động-----</option>
                                    <option value="delete">Xóa bản ghi</option>
                                </select>
                            </div>
                            <div class="col-4"><button type="submit" class="btn btn-success mr-5 btn-check-all-submit "
                                    disabled>Thực
                                    hiện</button>
                            </div>
                            <div class="col-2">
                                <span><a href="/nhatkysanxuat/trash"
                                        style="color:red ;font-size:24px; margin-left:20px"><strong>
                                            <i class="bi bi-trash3"></i> </strong></a></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3"> <button id="generatePdfButton"
                            class="btn btn-success btn-check-all-submit " style="width: 200px; " disabled>Xuất file PDF
                            <i class="bi bi-box-arrow-in-down"></i></button></div>
                </div>
                <table class="table table-bordered mt-3">
                    <thead>
                        <tr>
                            <th> <label><input type="checkbox" value="" id="checkbox-all"> </label></th>
                            <th>Vụ mùa</th>
                            <th>Tên công việc</th>
                            <th>Giống cây</th>
                            <th>Thời gian thực hiện</th>
                            <th>Tên nguyên vật liệu</th>
                            <th>Nồng độ pha/bón</th>
                            <th>Tổng lượng sử dụng</th>
                            <th>Thời gian cách ly</th>
                            <th>Mục đích sử dụng</th>
                            <th>Lô/Thửa</th>
                            <th>Thiết bị sử dụng</th>
                            <th>VS dụng cụ (Đ/K)</th>
                            <th>Chỉnh sửa</th>
                            <th>Xóa bỏ</th>
                        </tr>
                    </thead>
                    {{#each works}}
                    <tbody>
                        <tr>
                            <th>
                                <div class="checkbox">
                                    <label><input type="checkbox" id="checkboxId" name="workIds"
                                            value="{{this.works_id}}"></label>
                                </div>
                            </th>
                            <td>{{this.vumua}}</td>
                            <td>{{this.title}}</td>
                            <td>{{this.giongcay}}</td>
                            <td>{{this.start}} đến {{this.end}}</td>
                            <td>{{this.name}}</td>
                            <td>{{this.nongdo}}</td>
                            <td>{{this.luongsudung}}</td>
                            <td>{{this.thoigiancachly}}</td>
                            <td>{{this.mucdich}}</td>
                            <td>{{this.namearea}}</td>
                            <td>{{this.thietbi}}</td>
                            <td>{{this.vesinhdungcu}}</td>

                            <td> <a href="/nhatkysanxuat/{{this.works_id}}/edit"><i class="bi bi-pencil"
                                        style="color: rgb(7, 255, 56);"></i></a></td>
                            <td><a> <i class="bi bi-trash3" data-bs-toggle="modal" data-bs-target="#delete-work-modal"
                                        data-id="{{this.works_id}}" style="color: red;"></i></a></td>
                        </tr>
                        {{else}}
                        <tr>
                            <td colspan="15" class="text-center">
                                Không có bản ghi nào !
                            </td>
                        </tr>
                    </tbody>
                    {{/each}}
                </table>

                <div class="col-md-12 center">
                    <div class="">
                        <nav aria-label="Page navigation">
                            <ul class="pagination">
                                {{#if pagination.prev}}
                                <li class="page-item">
                                    <a class="page-link" onclick="changePage({{pagination.prev}})"
                                        aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                                {{/if}}
                                {{#each pagination.pages as |page|}}
                                {{#if page.active}}
                                <li class="page-item active">
                                    <a class="page-link" onclick="changePage({{this.number}})">{{this.number}}</a>
                                </li>
                                {{else if page.isDots }}

                                {{else}}
                                <li class="page-item ">
                                    <a class="page-link" onclick="changePage({{this.number}})">{{this.number}}</a>
                                </li>
                                {{/if}}
                                {{/each}}

                                {{#if pagination.next}}
                                <li class="page-item">
                                    <a class="page-link" onclick="changePage({{pagination.next}})" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                                {{/if}}
                            </ul>
                        </nav>
                    </div>
                </div>

        </div>
    </section>
    </form>
